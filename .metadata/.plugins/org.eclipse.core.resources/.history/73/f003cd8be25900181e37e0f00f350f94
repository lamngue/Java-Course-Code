package edu.gac.mcs178.gack.domain;

import java.util.List;

import edu.gac.mcs178.gack.Registry;
import edu.gac.mcs178.gack.Utility;

public class Trolls extends Person {
private static Registry registry;
	
	public static Registry getRegistry() {
		if(registry == null){
			registry = new Registry();
		}
		return registry;
	}

	private int threshold;
	private int restlessness;
	
	public Trolls(String name, Place place, int threshold) {
		super(name, place);
		this.threshold = threshold;
		this.restlessness = 0;
		getRegistry().addTrolls(this);
	}
	
	public void maybeAct() {
		if (restlessness < threshold) {
			restlessness++;
		} else {
			restlessness = 0;
			eatChocolate();
		}
	}
	
	public void eatChocolate() {
		List<Place> neighbors = getPlace().neighbors();
		if (!neighbors.isEmpty()) {
			Place newPlace = neighbors.get(Utility.randInt(neighbors.size()));
			moveTo(newPlace);
			// if newPlace has chocolate, then eat
			for (Thing thing : newPlace.getContents()) {
				if (thing instanceof Foods) {
					super.take((Foods) thing); 
					super.eat((Foods) thing);
					Utility.displayMessage("Chocolate has been eaten by some random Troll");
				}
			}
		}
	}
		
}
